<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RandomJoke"
    tools:showIn="@layout/activity_random_joke">

    <TextView
        android:id="@+id/jokeArea"
        android:layout_width="345dp"
        android:layout_height="262dp"
        android:layout_alignEnd="@+id/backrandom"
        android:layout_alignParentTop="true"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="0dp"
        android:text="Funny Joke!"
        android:textSize="20sp" />

    <Button
        android:id="@+id/newrandom"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:background="@android:color/holo_blue_light"
        android:text="New Joke"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/backrandom"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/newrandom"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginBottom="16dp"
        android:text="Home" />

    <TextView
        android:id="@+id/randomHeader"
        android:layout_width="341dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/jokeArea"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:text="Random!"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>