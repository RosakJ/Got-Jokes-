<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/randomjoke"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputjoke"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:text="Randomize joke"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/inputjoke"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp"
        android:text="find a Category"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="294dp"
        android:layout_height="148dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:src="@drawable/gotjokes_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:fontStyle="italic"
        android:text="- come joke around with us -"
        android:textSize="22sp"
        app:fontFamily="sans-serif-condensed" />

</RelativeLayout>