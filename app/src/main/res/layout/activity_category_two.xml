<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryTwo">

    <Button
        android:id="@+id/homeTwo"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="Home" />

    <Button
        android:id="@+id/jokeCategoryTwo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/categoryHomeTwo"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="159dp"
        android:background="@android:color/holo_blue_light"
        android:text="New Joke"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/jokeTextTwo"
        android:layout_width="340dp"
        android:layout_height="202dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="73dp"
        android:text="Funny Joke"
        android:textSize="20sp" />

    <Button
        android:id="@+id/categoryHomeTwo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/homeTwo"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-115dp"
        android:layout_marginBottom="91dp"
        android:background="@android:color/holo_blue_light"
        android:text="Categories"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/headerTwo"
        android:layout_width="339dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/jokeTextTwo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Chuck Norris"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>